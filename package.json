{
  "name": "simple-typescript-express",
  "version": "1.0.0",
  "description": "A simple express project using typescript",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc --watch",
    "watch-sass": "sass --watch src/public/scss/main.scss dist/public/css/main.css",
    "watch-node": "nodemon dist/app.js",
    "build": "npm run build-scss && npm run build-ts && npm run copy-assets",
    "build-ts": "tsc",
    "build-scss": "sass src/public/scss/main.scss dist/public/css/main.css",
    "copy-assets": "ts-node copy-assets.ts"
  },
  "keywords": [
    "typescript",
    "express",
    "pug",
    "sass"
  ],
  "author": "iamphduc",
  "license": "ISC",
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.33",
    "@types/pug": "^2.0.6",
    "@types/shelljs": "^0.8.11",
    "autobind-decorator": "^2.4.0",
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.16",
    "sass": "^1.51.0",
    "shelljs": "^0.8.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
